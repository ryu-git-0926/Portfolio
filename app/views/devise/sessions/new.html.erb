<div class="container">
  <div class="local_title">
    <h2>ログイン</h2>
  </div>
  <div class="form_field form_log_in">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例 : info@example.com", class: "form-control form-control-lg" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "例 : ・・・・・・" , class: "form-control form-control-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field_check_box">
          <div class="field_check_box_inner">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn-original" %>
      </div>

      <div class="actions">
        <%= f.submit "ゲストログイン (簡単)", class:"btn-original" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>